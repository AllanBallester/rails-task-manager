<h1> Your to Do list Maricon </h1>

<% @tasks.each do |task| %>
  <p> <%= task.name %> </p>
  <%= link_to "View details", task_path(task) %>
  <%= link_to "Add a new task", new_task_path %>
  <%= link_to "Edit task", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
